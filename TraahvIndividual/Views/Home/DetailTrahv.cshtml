@model TraahvIndividual.Models.Traahv

@{
    ViewBag.Title = "Details";
}
<div id="language-buttons" style="margin-bottom: 20px;">
    <button onclick="setLanguage('ru')">Русский язык</button>
    <button onclick="setLanguage('est')">Eesti keel</button>
    <button onclick="setLanguage('eng')">English</button>
</div>
<h2>@ViewBag.Title</h2>
<br />
<div>
    <h4>@(ViewBag.Language == "ru" ? "Номер автомобиля:" : ViewBag.Language == "eng" ? "Car Number:" : "Auto number:") @Html.DisplayFor(model => model.SoidukeNumber)</h4>
    <h4>@(ViewBag.Language == "ru" ? "Имя владельца:" : ViewBag.Language == "eng" ? "Owner Name:" : "Omaniku nimi:") @Html.DisplayFor(model => model.OmanikuNimi)</h4>
    <h4>@(ViewBag.Language == "ru" ? "Электронная почта:" : ViewBag.Language == "eng" ? "Email:" : "Epost:") @Html.DisplayFor(model => model.OmanikuEpost)</h4>
    <h4>@(ViewBag.Language == "ru" ? "Дата нарушения:" : ViewBag.Language == "eng" ? "Violation Date:" : "Rikkumisekuupaev:") @Html.DisplayFor(model => model.Rikkumisekuupaev)</h4>
    <h4>@(ViewBag.Language == "ru" ? "Превышение скорости:" : ViewBag.Language == "eng" ? "Speeding:" : "Kiiruseületamine:") @Html.DisplayFor(model => model.KiiruseUletamine)</h4>
    <h4>@(ViewBag.Language == "ru" ? "Размер штрафа:" : ViewBag.Language == "eng" ? "Fine Amount:" : "Trahvi suurus:") @Html.DisplayFor(model => model.TrahviSuurus)</h4>
</div>

<p>
    @Html.ActionLink(
        ViewBag.Language == "ru" ? "Назад к списку" :
        ViewBag.Language == "eng" ? "Back to List" :
        "Tagasi nimekirja",
        "TraahvUsers",
        "Home",
        new { id = Model.Id, lang = ViewBag.Language },
        new { @class = "btn btn-default" }
    )
</p>

<script type="text/javascript">
    function setLanguage(lang) {
        var currentUrl = window.location.href.split('?')[0];
        var newUrl = currentUrl + (currentUrl.indexOf('?') === -1 ? '?' : '&') + 'lang=' + lang;
        window.location.href = newUrl;
    }
</script>