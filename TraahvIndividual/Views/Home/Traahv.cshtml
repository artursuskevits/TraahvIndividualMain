@model IEnumerable<TraahvIndividual.Models.Traahv>

@{
    ViewBag.Title = "Traahv";
}


<main style="color: white; background: rgba(40, 77, 124, 0.7); border-radius: 20px; padding: 20px; ">
    <h2>Traahvid</h2>
    <table class="table" style="color: rgba(255, 255, 255, 0.7);">
        <tr>
            <th>@Html.DisplayNameFor(model => model.SoidukeNumber)</th>
            <th>@Html.DisplayNameFor(model => model.OmanikuNimi)</th>
            <th>@Html.DisplayNameFor(model => model.OmanikuEpost)</th>
            <th>@Html.DisplayNameFor(model => model.Rikkumisekuupaev)</th>
            <th>@Html.DisplayNameFor(model => model.KiiruseUletamine)</th>
            <th>@Html.DisplayNameFor(model => model.TrahviSuurus)</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SoidukeNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.OmanikuNimi)</td>
                <td>@Html.DisplayFor(modelItem => item.OmanikuEpost)</td>
                <td>@Html.DisplayFor(modelItem => item.Rikkumisekuupaev)</td>
                <td>@Html.DisplayFor(modelItem => item.KiiruseUletamine)</td>
                <td>@Html.DisplayFor(modelItem => item.TrahviSuurus)</td>
                <td>
                    @Html.ActionLink("Muuda", "EditTraahv", new { id = item.Id }, new
                    { @class = "btn btn-primary btn-md", style = "background-color: #2D287C; border: solid #2D287C 1px; opacity: 1; !important" }) |
                    @Html.ActionLink("Kustuta", "DeleteTraahv", new { id = item.Id }, new
                    { @class = "btn btn-primary btn-md", style = "background-color: #2D287C; border: solid #2D287C 1px; opacity: 1; !important" })
                    </td>
            </tr>
        }
    </table>
    <p>
        <a href="CreateTraahv" class="btn btn-primary btn-md" style="background-color: #2D287C; border: solid #2D287C 1px; right: 10px; ">Lisa uus &raquo;</a>
        <a href="@Url.Action("ExportToExcel")" class="btn btn-primary btn-md" style="background-color: #2D287C; border: solid #2D287C 1px; opacity: 1; !important">Export to Excel</a>
    </p>

</main>