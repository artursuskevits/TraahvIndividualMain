@model TraahvIndividual.Models.Traahv

@{
    ViewBag.Title = ViewBag.Language == "ru" ? "Удалить Штраф" : ViewBag.Language == "eng" ? "Delete Penalty" : "Kustuta Traahv";
}

<div style="color: white; background: rgba(40, 77, 124, 0.7); border-radius: 20px; padding: 20px;">

    <h2>@ViewBag.Title</h2>
    <h3>@(ViewBag.Language == "ru" ? "Вы уверены, что хотите удалить это?" : ViewBag.Language == "eng" ? "Are you sure you want to delete this?" : "Kas olete kindel, et soovite selle kustutada?")</h3>

    <hr />
    <h4>@(ViewBag.Language == "ru" ? "Штраф" : ViewBag.Language == "eng" ? "Penalty" : "Trahv")</h4>
    <dl class="dl-horizontal">
        <dt>@(ViewBag.Language == "ru" ? "Номер транспортного средства" : ViewBag.Language == "eng" ? "Vehicle Number" : "Sõiduki Number")</dt>
        <dd>@Html.DisplayFor(model => model.SoidukeNumber)</dd>

        <dt>@(ViewBag.Language == "ru" ? "Имя владельца" : ViewBag.Language == "eng" ? "Owner Name" : "Omaniku Nimi")</dt>
        <dd>@Html.DisplayFor(model => model.OmanikuNimi)</dd>

        <dt>@(ViewBag.Language == "ru" ? "Электронная почта владельца" : ViewBag.Language == "eng" ? "Owner Email" : "Omaniku E-post")</dt>
        <dd>@Html.DisplayFor(model => model.OmanikuEpost)</dd>

        <dt>@(ViewBag.Language == "ru" ? "Дата нарушения" : ViewBag.Language == "eng" ? "Violation Date" : "Rikkumise Kuupäev")</dt>
        <dd>@Html.DisplayFor(model => model.Rikkumisekuupaev)</dd>

        <dt>@(ViewBag.Language == "ru" ? "Превышение скорости" : ViewBag.Language == "eng" ? "Speeding" : "Kiiruse Ületamine")</dt>
        <dd>@Html.DisplayFor(model => model.KiiruseUletamine)</dd>

        <dt>@(ViewBag.Language == "ru" ? "Размер штрафа" : ViewBag.Language == "eng" ? "Fine Amount" : "Trahvi Suurus")</dt>
        <dd>@Html.DisplayFor(model => model.TrahviSuurus)</dd>
    </dl>

    @using (Html.BeginForm("DeleteTraahv", "Traahv", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="@(
                ViewBag.Language == "ru" ? "Удалить" :
                ViewBag.Language == "eng" ? "Delete" :
                "Kustuta")" class="btn btn-danger" style="color: white; background-color: #0d6efd; border: solid #0d6efd 1px; margin-top: 10px; " /> |
            @Html.ActionLink(
                ViewBag.Language == "ru" ? "Назад к списку" :
                ViewBag.Language == "eng" ? "Back to List" :
                "Tagasi nimekirja", "Traahv", null, new { @class = "btn btn-default", style = "background-color: #0d6efd; border: solid #0d6efd 1px; margin-top: 10px; color: white;" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        function setLanguage(lang) {
            var currentUrl = window.location.href.split('?')[0];
            var newUrl = currentUrl + (currentUrl.indexOf('?') === -1 ? '?' : '&') + 'lang=' + lang;
            window.location.href = newUrl;
        }
    </script>
}
