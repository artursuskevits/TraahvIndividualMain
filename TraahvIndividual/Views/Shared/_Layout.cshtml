<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body background="~/Content/Images/church_1.png" style="background-size: 100% 100vh;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-opacity-75" style="background-color: #610101; margin-bottom: 120px;">
        <div class="container" style="background-color: #610101 ">
            @Html.ActionLink(
                ViewBag.Language == "ru" ? "Главная" : ViewBag.Language == "eng" ? "Home" : "Avaleht",
                "Index",
                "Home",
                new { lang = ViewBag.Language },
                new { @class = "nav-link" }
            )
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        @Html.ActionLink(
                            ViewBag.Language == "ru" ? "Главная" : ViewBag.Language == "eng" ? "Home" : "Avaleht",
                            "Index",
                            "Home",
                            new { lang = ViewBag.Language },
                            new { @class = "nav-link" }
                        )
                    </li>
                    <li>
                        @Html.ActionLink(
                            ViewBag.Language == "ru" ? "Штрафы" : ViewBag.Language == "eng" ? "Penalties" : "Traahvid",
                            "Traahv",
                            "Home",
                            new { lang = ViewBag.Language },
                            new { @class = "nav-link" }
                        )
                    </li>
                    <li>
                        @Html.ActionLink(
                            ViewBag.Language == "ru" ? "Админ панель" : ViewBag.Language == "eng" ? "Admin panel" : "Administraatori paneel",
                            "Traahv",
                            "Home",
                            new { lang = ViewBag.Language },
                            new { @class = "nav-link" }
                        )
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr style="border:solid black 1px;" />
        <footer style="position: absolute; bottom: 0px; color: white;">
            <p>&copy; @DateTime.Now.Year - DOUEBLE WWWWWWWW</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
